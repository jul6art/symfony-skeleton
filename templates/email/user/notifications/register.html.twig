{% extends 'layout/layout_email.html.twig' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'email.user.notifications.register.subject'|trans({}, 'email') }}
    {%- endautoescape -%}
{% endblock subject %}

{% set url = http_protocol ~ current_domain ~ path('admin_user_list') %}

{% block body_html %}
    {{ 'email.user.notifications.register.message'|trans({
        '%name%': user.fullname,
        '%firstname%': firstname,
        '%lastname%': lastname,
        '%fullname%': fullname,
        '%username%': username,
        '%email%': email,
        '%url%': url,
        '%project_name%': setting_value(constant('App\\Entity\\Setting::SETTING_PROJECT_NAME'), constant('App\\Entity\\Setting::SETTING_PROJECT_NAME_VALUE'))
    }, 'email')|raw }}
{% endblock body_html %}

{% set links = [
    {
        text: 'email.user.notifications.register.link.text'|trans({}, 'email'),
        url: url,
    },
] %}

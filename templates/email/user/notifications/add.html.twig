{% extends 'layout/layout_email.html.twig' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'email.user.notifications.added.subject'|trans({}, 'email') }}
    {%- endautoescape -%}
{% endblock subject %}

{% set url = http_protocol ~ current_domain ~ path('admin_user_list') %}

{% block body_html %}
    {{ 'email.user.notifications.added.message'|trans({
        '%name%': user.fullname,
        '%firstname%': firstname,
        '%lastname%': lastname,
        '%fullname%': fullname,
        '%username%': username,
        '%email%': email,
        '%url%': url,
        '%project_name%': setting_value(constant('App\\Entity\\Constants\\SettingName::SETTING_NAME_PROJECT_NAME'), constant('App\\Entity\\Constants\\SettingName::SETTING_VALUE_PROJECT_NAME'))
    }, 'email')|raw }}
{% endblock body_html %}

{% set links = [
    {
        text: 'email.user.notifications.added.link.text'|trans({}, 'email'),
        url: url,
    },
] %}

{% extends 'layout/layout_email.html.twig' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'email.user.add.subject'|trans({'%name%': fullname}, 'email') }}
    {%- endautoescape -%}
{% endblock subject %}

{% set url = http_protocol ~ current_domain ~ path('admin_homepage') %}

{% block body_html %}
    {{ 'email.user.add.message'|trans({
        '%name%': fullname,
        '%username%': username,
        '%password%': password,
        '%url%': url,
        '%project_name%': setting_value(constant('App\\Entity\\Setting::SETTING_PROJECT_NAME'), constant('App\\Entity\\Setting::SETTING_PROJECT_NAME_VALUE'))
    }, 'email')|raw }}
{% endblock body_html %}

{% set links = [
    {
        text: 'email.user.add.link.text'|trans({}, 'email'),
        url: url,
    },
] %}

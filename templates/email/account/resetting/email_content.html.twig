{% extends 'layout/layout_email.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subject %}
{%- autoescape false -%}
{{ 'resetting.email.subject'|trans({'%username%': user.username}) }}
{%- endautoescape -%}
{% endblock subject %}

{% block body_html %}
    {{ 'email.account.resetting.message'|trans({
        '%username%': user.username,
        '%confirmationUrl%': confirmationUrl,
        '%project_name%': setting_value(constant('App\\Entity\\Constants\\SettingName::SETTING_NAME_PROJECT_NAME'), constant('App\\Entity\\Constants\\SettingName::SETTING_VALUE_PROJECT_NAME'))
    }, 'email')|raw }}
{% endblock body_html %}

{% set links = [
    {
        text: 'email.account.resetting.link.text'|trans({}, 'email'),
        url: confirmationUrl,
    },
] %}

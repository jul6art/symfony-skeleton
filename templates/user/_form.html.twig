{% if form_errors(form)|length %}
    <div class="alert has-error">
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.gender) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.username) }}
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.firstname) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.lastname) }}
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.email) }}
    </div>
</div>

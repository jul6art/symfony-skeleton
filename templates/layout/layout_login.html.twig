{% extends 'base.html.twig' %}

{% block title %}
    {% block page_title %}{% endblock page_title %}{{ parent() }}
{% endblock title %}

{% block stylesheets %}
    {% include 'includes/stylesheets.html.twig' %}
{% endblock stylesheets %}

{% block body_class %}login-page bg-{{ theme_name() }}{% endblock body_class %}

{% block body_content %}
    {% include 'includes/loader.html.twig' %}

    <div class="login-box">
        <div class="logo">
            <a href="{{ path('admin_homepage') }}">
                {% if logo is defined %}
                    <img src="{{ logo }}" alt="logo {{ setting_value(constant('App\\Entity\\Setting::SETTING_PROJECT_NAME'), constant('App\\Entity\\Setting::SETTING_PROJECT_NAME_VALUE')) }}" class="inline">
                {% endif %}
                {{ setting_value(constant('App\\Entity\\Setting::SETTING_PROJECT_NAME'), constant('App\\Entity\\Setting::SETTING_PROJECT_NAME_VALUE'))|upper }}
            </a>
        </div>
        <div class="card">
            <div class="body">
                {% block content %}{% endblock content %}
            </div>
        </div>
    </div>
{% endblock body_content %}

{% block javascripts %}
    {% include 'includes/javascripts_dynamic.html.twig' %}
    {% include 'includes/javascripts.html.twig' %}
{% endblock javascripts %}
{% extends 'layout/layout_base.html.twig' %}

{% trans_default_domain 'LexikTranslationBundle' %}

{% block body_class %}
    {{ parent() }} translation-layout
{% endblock body_class %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('table') }}

    {% block lexik_stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/lexiktranslation/ng-table/ng-table.min.css') }}">
    {% endblock %}
{% endblock stylesheets %}

{% block content %}
    {% block lexik_content %}{% endblock lexik_content %}
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('table') }}

    {% block lexik_javascript_footer %}{% endblock lexik_javascript_footer %}
{% endblock javascripts %}

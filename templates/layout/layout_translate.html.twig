{% extends 'layout/layout_base.html.twig' %}

{% block body_class %}
    {{ parent() }} translation-layout
{% endblock body_class %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('table') }}

    {% block lexik_stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/lexiktranslation/ng-table/ng-table.min.css') }}">
    {% endblock %}
{% endblock stylesheets %}

{% block content %}
    {% block lexik_content %}{% endblock lexik_content %}
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('table') }}

    {% block lexik_javascript_footer %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.9/angular.min.js"></script>
        <script src="{{ asset('bundles/lexiktranslation/ng-table/ng-table.min.js') }}"></script>
    {% endblock %}
{% endblock javascripts %}
